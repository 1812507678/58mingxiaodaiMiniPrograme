/* pages/form/form.wxss */
page{
  height: 100%;
}
.all_content{
  background-color: #F4F4F4;
  height: 100%;
  width: 100%;
  position: absolute
}
.section__ctn{
  background-color: #fff;
}
.apply_count{
  width: 100%;
  display: flex;
  justify-content: center;
}
.section__apply{
  background-color: #fff;
  margin-top: 20px;
  color: #6E6E6E;
  font-size:medium;
}
.apply_dec{
  width: 100%;
  display: flex;
  justify-content: center;
  color: #FF7F00;
  font-size: small;
  padding-top: 15rpx;
}
.section__apply_cilick{
  display: flex;  
  flex-direction: row; 
  height:250rpx;
 
}
.section__apply_money{
  width: 100%; 
  height: 100%;
  margin-top: 10px;
}
.apply_money_span{
  width: 100%;
  display: flex;
  justify-content: center;
  color: #FF0000;
  margin-top: 30rpx;
  
}
.apply_money_span_1{
  width: 100%;
  display: flex;
  justify-content: center;
  color: #6E6E6E;
  margin-top: 15rpx;
}
.apply_money_span_2{
  width: 80%;
  display: flex;
  justify-content: center;
  color: #fff;
  font-weight: 500;
  background-color: #52E9BA;
  border-radius: 5px;
  margin-top: 5rpx;
}
.btn-hover{background-color: #218868;} 

.section__platform{
  display: flex;  
  flex-direction: row; 
  margin-top: 20px;
  background: #FFF;
}
.platform_introduce{
  width: 50%; 
  display: flex;  
  flex-direction: column; 
}
.platform_rate_icon{
  width: 100%;
  display: flex;
  justify-content: center;
}
.platform_icon{
  width: 300rpx; 
  height: 300rpx; 
  display: flex;
  justify-content: center;
}
.platform_rate{
  width: 100%;
  display: flex;
  justify-content: center;
  color: #47B4F1;
  margin-top: 10px;
  margin-bottom: 20rpx;
}